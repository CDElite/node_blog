<%- include header %>
	<% if (user && user.name == post.name) { %>
	<p>
		<span><a class="edit" href="/edit/<%= post._id %>">编 辑</a></span>
		<span><a class="remove" href="/remove/<%= post._id %>">删 除</a></span>
	</p>
	<% } %>
	<p class="info">
			作者：<a href="/u/<%= post.name %>"><%= post.name %></a> | 
			日期：<%= post.time.toLocaleString() %> |
			标签：<% post.tags.forEach(function (tag, index) { %>
			<% if (tag) { %>
				<a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
				<% } %>
			<% }); %>
		</p>
	<p> <%- post.post %> </p>
	<p class="info">阅读： <%= post.pv %> | 评论： <%= post.comments.length %></p>
	<%- include comments %>	
<%- include footer %>